//include "/etc/bind/zones.rfc1918";

zone "wired.lan" {
	type master;
	file "/etc/bind/zones/wired.lan.zone.signed";
	allow-query { myslaves; localhost; mynet; };
	allow-transfer { myslaves; };
	forwarders {
	};
};
zone "lan" {
        type master;
        file "/etc/bind/zones/lan.zone.signed";
        allow-transfer { myslaves; };
        allow-query { myslaves; localhost; mynet; };
        forwarders {
        };
};
