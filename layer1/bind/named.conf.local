zone "0.168.192.in-addr.arpa" {
	type master;
	file "/etc/bind/zones/0.168.192.in-addr.arpa.signed";
	allow-transfer { myslaves; };
	allow-query { myslaves; localhost; };
	forwarders {
	};
};
